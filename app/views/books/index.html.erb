<div class="container mt-4">
<div class="text-center mb-4">
    <img src="<%= asset_path('logo.png') %>" alt="Bookita Logo" class="img-fluid" style="max-width: 200px;">
</div>
  
  <div class="d-flex justify-content-center mb-3">
    <form class="d-flex w-50">
      <input type="text" class="form-control me-2" placeholder="Search by title or author.">
      <button class="btn btn-primary">Search</button>
    </form>
  </div>

  <table class="table table-bordered text-center">
    <thead class="table-light">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Summary</th>
        <th>Deadline</th>
        <th>Time Remaining</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.summary || "No summary available." %></td>
          <td><%= book.deadline || "No Deadline" %></td>
          <td><%= book.deadline.present? ? distance_of_time_in_words_to_now(book.deadline) : "No Deadline" %></td>
          <td>
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm w-100" %>
            <%= link_to "Delete", book_path(book), method: :delete, class: "btn btn-danger btn-sm w-100", data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to "Add New Book", new_book_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>